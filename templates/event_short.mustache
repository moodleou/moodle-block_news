{{!
    @template block_news/event_short

    Template for a single event displayed in a list in the news/events block.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * classes
    * eventdatetime
    * eventmonth
    * eventday
    * title
    * fulleventdate
    * viewlink
    * groupindication

    Example context (json):
    {
        "messagedate": "23 Jan 2017",
        "eventdate": "16 May 2017",
        "eventmonth": "May",
        "eventday": "16",
        "fulleventdate": "Tuesday, May 16, 2017",
        "eventlocation": "A pub",
        "title": "Mark's birthday",
        "viewlink": "http://example.com",
        "classes": "",
        "groupindication": "",
        "hasactions": true,
        "tag": "h2",
        "actions": [
            {
                "icon": {
                    "attributes": [
                        { "name": "src", "value": "https://moodle.org/logo/moodle-logo.svg" },
                        { "name": "class", "value": "iconsmall" },
                        {"name": "alt", "value": "Alt text for icon"}
                    ]
                },
                "url": "http://example.com"
            }
        ]
    }

}}
<article class="block_news block_news_event clearfix {{classes}}">
    <time class="block_news_event_date" datetime="{{eventdatetime}}">
        <span class="block_news_event_date_month">{{eventmonth}}</span>
        <span class="block_news_event_date_day">{{eventday}}</span>
    </time>
    <div class="block_news_msg">
        <{{tag}}>
            <a href="{{viewlink}}"><span class="block_news_msg_title">{{title}}</span></a>
        </{{tag}}>
        <div class="block_news_event_fulldate">{{{fulleventdate}}}</div>
        {{#eventlocation}}
            <div class="block_news_event_location">{{{eventlocation}}}</div>
        {{/eventlocation}}
        {{#groupindication}}<div class="block_news_group_indication">{{{groupindication}}}</div>{{/groupindication}}
        {{#hasactions}}
        <div class="box editicons">
        {{/hasactions}}
        {{#actions}}
            <a href="{{url}}">
                {{#icon}}
                    {{> core/pix_icon}}
                {{/icon}}
            </a>
        {{/actions}}
        {{#hasactions}}
        </div>
        {{/hasactions}}
    </div>
</article>
